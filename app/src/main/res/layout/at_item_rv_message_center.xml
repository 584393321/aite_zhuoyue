<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="204px"
    android:layout_marginBottom="15px"
    android:layout_marginLeft="42px"
    android:layout_marginRight="42px"
    android:layout_marginTop="15px"
    android:background="@drawable/at_selector_12px_ffffff_e6e6e6"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="138px"
        android:layout_height="138px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210px"
        android:layout_marginTop="36px"
        android:ellipsize="end"
        android:maxWidth="540px"
        android:textColor="@color/_333333"
        android:textSize="42px" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45px"
        android:layout_marginLeft="210px"
        android:layout_marginRight="30px"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/_999999"
        android:textSize="39px" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:layout_marginTop="36px"
        android:textColor="@color/_999999"
        android:textSize="36px" />
</RelativeLayout>