<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_F1F1F1"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:bartext="@string/at_regist_family_member" />

    <com.aliyun.ayland.widget.ATObservableScrollView
        android:id="@+id/observableScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60px"
                android:layout_marginTop="24px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="45px"
                android:paddingRight="45px">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150px">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/at_name2"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/tv_xing2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/_FF5656"
                            android:textSize="45px" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="@string/at_input_name"
                        android:inputType="text"
                        android:maxLength="4"
                        android:textColor="@color/_666666"
                        android:textColorHint="@color/_999999"
                        android:textSize="42px" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/at_shape_1038px3px_eeeeee"
                    android:layerType="software" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150px">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/at_id_number"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/tv_xing4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/_FF5656"
                            android:textSize="45px" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="end|center_vertical"
                        android:hint="@string/at_input_id_number"
                        android:maxLength="18"
                        android:textColor="@color/_666666"
                        android:textColorHint="@color/_999999"
                        android:textSize="42px" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/at_shape_1038px3px_eeeeee"
                    android:layerType="software" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150px">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/at_birthday"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/tv_xing5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/_FF5656"
                            android:textSize="45px" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="end|center_vertical"
                        android:text="@string/at_select_birthday"
                        android:textSize="45px" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/at_shape_1038px3px_eeeeee"
                    android:layerType="software" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150px">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/at_identity"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/tv_xing6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/_FF5656"
                            android:textSize="45px" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_member"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableRight="@drawable/at_selector_checkbox1"
                            android:gravity="center"
                            android:text="@string/at_householdtype102"
                            android:textColor="@color/_666666"
                            android:textSize="45px" />

                        <RadioButton
                            android:id="@+id/rb_rent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18px"
                            android:button="@null"
                            android:drawableRight="@drawable/at_selector_checkbox1"
                            android:gravity="center"
                            android:text="@string/at_householdtype104"
                            android:textColor="@color/_666666"
                            android:textSize="45px" />

                        <RadioButton
                            android:id="@+id/rb_visite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18px"
                            android:button="@null"
                            android:drawableRight="@drawable/at_selector_checkbox1"
                            android:gravity="center"
                            android:text="@string/at_householdtype103"
                            android:textColor="@color/_666666"
                            android:textSize="45px" />
                    </RadioGroup>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/at_shape_1038px3px_eeeeee"
                    android:layerType="software" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/at_phone_number1"
                        android:textColor="@color/_333333"
                        android:textSize="45px" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="@string/at_input_user_phone"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/_666666"
                        android:textColorHint="@color/_999999"
                        android:textSize="42px" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/at_shape_1038px3px_eeeeee"
                    android:layerType="software" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150px">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/at_start_check_in_time"
                            android:textColor="@color/_333333"
                            android:textSize="45px" />

                        <TextView
                            android:id="@+id/tv_xing7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/_FF5656"
                            android:textSize="45px" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="end|center_vertical"
                        android:text="@string/at_please_select_start_time1"
                        android:textSize="45px" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@drawable/at_shape_1038px3px_eeeeee"
                    android:layerType="software" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_regist_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:text="@string/at_regist_tip"
                android:textColor="@color/_666666"
                android:textSize="36px"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_subscribe"
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:layout_marginBottom="150px"
                android:layout_marginLeft="60px"
                android:layout_marginRight="60px"
                android:layout_marginTop="45px"
                android:background="@drawable/at_selector_150px_1478c8_005395"
                android:gravity="center"
                android:text="@string/at_save"
                android:textColor="@color/white"
                android:textSize="45px" />
        </LinearLayout>
    </com.aliyun.ayland.widget.ATObservableScrollView>
</LinearLayout>