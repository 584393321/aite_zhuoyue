<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_F5F5F5"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bartext="@string/at_setting" />

    <RelativeLayout
        android:id="@+id/rl_change_password"
        android:layout_width="match_parent"
        android:layout_height="168px"
        android:layout_marginTop="20px"
        android:background="@drawable/at_selector_ffffff_e0e0e0"
        android:paddingLeft="42px"
        android:paddingRight="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/at_change_password"
            android:textColor="@color/_333333"
            android:textSize="45px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_jump_h" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="42px"
        android:background="@color/_EEEEEE" />

    <RelativeLayout
        android:id="@+id/rl_tmall"
        android:layout_width="match_parent"
        android:layout_height="168px"
        android:background="@drawable/at_selector_ffffff_e0e0e0"
        android:paddingLeft="42px"
        android:paddingRight="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/at_tmall_wizard_authorization"
            android:textColor="@color/_333333"
            android:textSize="45px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_lookover_gray" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="42px"
        android:background="@color/_EEEEEE" />

    <RelativeLayout
        android:id="@+id/rl_storage"
        android:layout_width="match_parent"
        android:layout_height="168px"
        android:background="@drawable/at_selector_ffffff_e0e0e0"
        android:paddingLeft="42px"
        android:paddingRight="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/at_clear_cache"
            android:textColor="@color/_333333"
            android:textSize="45px" />

        <ImageView
            android:id="@+id/img_lookover_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_lookover_gray" />

        <TextView
            android:id="@+id/tv_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="13px"
            android:layout_toLeftOf="@id/img_lookover_gray"
            android:textColor="@color/_999999"
            android:textSize="42px" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="426px"
        android:layout_height="126px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="228px"
        android:background="@drawable/at_selector_66px_1478c8_005395"
        android:gravity="center"
        android:text="@string/at_logout"
        android:textColor="@color/white"
        android:textSize="51px" />
</LinearLayout>