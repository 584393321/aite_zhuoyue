<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/toolbar_padding_top"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="972px"
        android:layout_height="1266px"
        android:layout_marginTop="219px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/at_shape_15px_ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="72px"
            android:layout_marginLeft="78px"
            android:layout_marginTop="69px"
            android:textStyle="bold"
            android:textColor="@color/_333333"
            android:text="通行二维码"
            />

        <ImageView
            android:id="@+id/img_code"
            android:layout_width="822px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="66px"
            android:layout_height="822px"/>

        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="81px"
            android:gravity="center"
            android:drawablePadding="9px"
            android:drawableLeft="@drawable/zhihui_ico_refresh"
            android:textColor="@color/_1478C8"
            android:text="@string/at_auto_refresh"
            android:textSize="45px" />
    </LinearLayout>
</LinearLayout>