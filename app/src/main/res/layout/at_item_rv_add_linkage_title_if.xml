<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="12px"
    android:paddingRight="12px">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42px"
        android:text="@string/at_scene_name"
        android:textColor="@color/_333333"
        android:textSize="51px"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px">

        <ImageView
            android:id="@+id/img"
            android:layout_width="996px"
            android:layout_height="333px"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/home_ld_cqzm" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@drawable/basic_all_icon_unfold_normal_w" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="192px"
        android:layout_marginTop="24px"
        android:background="@drawable/at_selector_15px_ffffff_to_e0e0e0"
        android:gravity="center_vertical"
        android:hint="@string/at_input_linkage_name1"
        android:maxLength="15"
        android:paddingLeft="48px"
        android:textColor="@color/_333333"
        android:textColorHint="@color/_CCCCCC"
        android:textSize="42px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginTop="60px"
        android:text="@string/at_if_"
        android:textColor="@color/_333333"
        android:textSize="51px"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginTop="12px"
        android:text="@string/at_satisfy_any_of_the_following_trigger_conditions"
        android:textColor="@color/_999999"
        android:textSize="39px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="144px"
        android:layout_marginTop="24px"
        android:background="@drawable/at_shape_15px_e0e0e0"
        android:gravity="center_vertical"
        android:paddingLeft="48px"
        android:text="@string/at_manual_trigger1"
        android:textColor="@color/_333333"
        android:textSize="42px" />
</LinearLayout>