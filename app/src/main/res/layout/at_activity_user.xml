<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="778px">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="749px"
            android:scaleType="fitXY"
            android:src="@drawable/bg_s_wode" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="54px"
                android:text="@string/at_mine"
                android:textColor="@color/_131415"
                android:textSize="66px" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="36px"
                android:src="@drawable/btn_guanbi" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="208px"
            android:orientation="horizontal">

            <com.aliyun.ayland.widget.ATMyCircleImageView
                android:id="@+id/img_user"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_margin="45px" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="42px"
                android:textColor="@color/_6B6357"
                android:textSize="48px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320px"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="27px"
            android:paddingRight="27px">

            <LinearLayout
                android:id="@+id/ll_device_manage"
                android:layout_width="0dp"
                android:layout_height="300px"
                android:layout_marginLeft="21px"
                android:layout_marginRight="21px"
                android:layout_weight="1"
                android:background="@drawable/at_selector_f5f5f5_eeeeee"
                android:drawablePadding="33px"
                android:elevation="10px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:layout_marginTop="66px"
                    android:src="@drawable/icon_s_shebeiguanliyugongxiang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33px"
                    android:text="@string/at_device_manage_share"
                    android:textColor="@color/_DEB577"
                    android:textSize="36px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_room_manage"
                android:layout_width="0dp"
                android:layout_height="300px"
                android:layout_marginLeft="21px"
                android:layout_marginRight="21px"
                android:layout_weight="1"
                android:background="@drawable/at_selector_f5f5f5_eeeeee"
                android:drawablePadding="33px"
                android:elevation="10px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:layout_marginTop="66px"
                    android:src="@drawable/icon_s_fangjianguanli" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33px"
                    android:text="@string/at_room_manage"
                    android:textColor="@color/_DEB577"
                    android:textSize="36px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_family_manage"
                android:layout_width="0dp"
                android:layout_height="300px"
                android:layout_marginLeft="21px"
                android:layout_marginRight="21px"
                android:layout_weight="1"
                android:background="@drawable/at_selector_f5f5f5_eeeeee"
                android:drawablePadding="33px"
                android:elevation="10px"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:layout_marginTop="66px"
                    android:src="@drawable/icon_s_jiatingguanli" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33px"
                    android:text="@string/at_family_manage"
                    android:textColor="@color/_DEB577"
                    android:textSize="36px" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_message_center"
        android:layout_width="match_parent"
        android:layout_height="161px"
        android:layout_marginTop="45px"
        android:background="@drawable/at_selector_00ffffff_cfcfcf">

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:src="@drawable/icon_s_xiaoxizhongxin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="201px"
            android:text="@string/at_message_center"
            android:textColor="@color/_746957" />

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px"
            android:src="@drawable/btn_jump_h" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_switch_room"
        android:layout_width="match_parent"
        android:layout_height="161px"
        android:background="@drawable/at_selector_00ffffff_cfcfcf">

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:src="@drawable/icon_s_qiehuanfangjian" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="201px"
            android:text="@string/at_switch_room"
            android:textColor="@color/_746957" />

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px"
            android:src="@drawable/btn_jump_h" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_manage_face"
        android:layout_width="match_parent"
        android:layout_height="161px"
        android:background="@drawable/at_selector_00ffffff_cfcfcf">

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:src="@drawable/icon_s_renlianshibieguanli" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="201px"
            android:text="@string/at_manage_face"
            android:textColor="@color/_746957" />

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px"
            android:src="@drawable/btn_jump_h" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_feed_back"
        android:layout_width="match_parent"
        android:layout_height="161px"
        android:background="@drawable/at_selector_00ffffff_cfcfcf">

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:src="@drawable/icon_s_yijianfankui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="201px"
            android:text="@string/at_feed_back"
            android:textColor="@color/_746957" />

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px"
            android:src="@drawable/btn_jump_h" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_about"
        android:layout_width="match_parent"
        android:layout_height="161px"
        android:background="@drawable/at_selector_00ffffff_cfcfcf">

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:src="@drawable/icon_s_guanyu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="201px"
            android:text="@string/at_about"
            android:textColor="@color/_746957" />

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px"
            android:src="@drawable/btn_jump_h" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="match_parent"
        android:layout_height="161px"
        android:background="@drawable/at_selector_00ffffff_cfcfcf">

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:src="@drawable/icon_s_shezhi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="201px"
            android:text="@string/at_setting"
            android:textColor="@color/_746957" />

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px"
            android:src="@drawable/btn_jump_h" />
    </RelativeLayout>
</LinearLayout>