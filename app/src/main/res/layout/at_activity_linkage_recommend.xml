<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_F5F5F5"
        android:orientation="vertical">

        <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
            android:id="@+id/titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bttext="@string/at_add_scene" />

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smartRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlAccentColor="@android:color/white"
            app:srlPrimaryColor="#444444">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                
                <ImageView
                    android:id="@+id/img_scene"
                    android:layout_width="996px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24px"
                    android:layout_height="330px" />

                <TextView
                    android:layout_marginTop="60px"
                    android:text="@string/at_if_"
                    android:textColor="@color/_333333"
                    android:layout_marginLeft="57px"
                    android:textSize="51px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="12px"
                    android:text="@string/at_satisfy_any_of_the_following_trigger_conditions1"
                    android:layout_marginLeft="57px"
                    android:textColor="@color/_999999"
                    android:textSize="39px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="24px"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="996px"
                    android:gravity="center_vertical"
                    android:paddingLeft="42px"
                    android:textSize="42px"
                    android:background="@drawable/at_selector_15px_e0e0e0_to_999999"
                    android:textColor="@color/_333333"
                    android:text="@string/at_manual_trigger"
                    android:layout_height="144px" />

                <TextView
                    android:layout_marginTop="60px"
                    android:text="@string/at_jiu"
                    android:textColor="@color/_333333"
                    android:layout_marginLeft="57px"
                    android:textSize="51px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="12px"
                    android:text="@string/at_perform_the_following_conditions1"
                    android:textColor="@color/_999999"
                    android:layout_marginLeft="57px"
                    android:textSize="39px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>