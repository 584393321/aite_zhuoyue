<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bartext="@string/at_wisdom_security" />

    <LinearLayout
        android:id="@+id/ll_zhaf"
        android:layout_width="match_parent"
        android:layout_marginRight="45px"
        android:layout_marginLeft="45px"
        android:layout_marginTop="24px"
        android:layout_height="300px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/at_selector_f5f5f5_eeeeee">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_zhaf_dcsq"
            android:layout_marginLeft="45px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="独出社区关怀订阅"
                android:textColor="@color/_333333"
                android:textSize="45px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="独出社区关怀订阅"
                android:layout_marginTop="24px"
                android:textColor="@color/_999999"
                android:textSize="36px"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_jtbf"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_marginRight="45px"
        android:layout_marginLeft="45px"
        android:layout_marginTop="36px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/at_selector_f5f5f5_eeeeee">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ioc_jtbf"
            android:layout_marginLeft="45px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="独出社区关怀订阅"
            android:textColor="@color/_333333"
            android:textSize="45px"/>
    </LinearLayout>
</LinearLayout>