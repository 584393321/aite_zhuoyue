<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="152px">

    <ImageView
        android:id="@+id/img_device"
        android:layout_width="132px"
        android:layout_height="132px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="42px" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="207px"
        android:textColor="@color/_333333"
        android:textSize="42px" />

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="160px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/at_selector_ffffff_e0e0e0"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/common_icon_delete_n"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="72px"
            android:layout_height="72px"
            android:src="@drawable/common_icon_add_n"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="204px"
        android:layout_marginRight="42px"
        android:background="@color/_F1F1F1" />
</RelativeLayout>