<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="182px"
    android:background="@drawable/at_selector_ffffff_e0e0e0"
    android:clickable="true"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_device"
        android:layout_width="137px"
        android:src="@drawable/hotel_scene_leave"
        android:layout_marginLeft="50px"
        android:layout_centerVertical="true"
        android:layout_height="137px" />

    <TextView
        android:id="@+id/tv_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="227px"
        android:text="离家模式"
        android:textColor="@color/_666666"
        android:textSize="36px" />

    <ImageView
        android:id="@+id/img_jump"
        android:layout_width="72px"
        android:src="@drawable/jump"
        android:layout_alignParentRight="true"
        android:layout_marginRight="48px"
        android:layout_centerVertical="true"
        android:layout_height="72px" />

    <View
        android:background="@color/_EEEEEE"
        android:layout_marginLeft="215px"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
</RelativeLayout>