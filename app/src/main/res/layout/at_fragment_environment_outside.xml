<?xml version="1.0" encoding="utf-8"?>
<com.aliyun.ayland.widget.ATObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45px"
                    android:textColor="@color/_1478C8"
                    android:textSize="120px" />

                <TextView
                    android:id="@+id/tv_temp_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="â„ƒ"
                    android:textColor="@color/_1478C8"
                    android:textSize="60px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_begin"
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_to"
                    android:layout_width="63px"
                    android:layout_height="63px"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_s_tianqi_guodu"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_end"
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:layout_marginLeft="45px"
                    android:src="@drawable/at_weather_17" />

                <TextView
                    android:id="@+id/tv_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:textColor="@color/_333333"
                    android:textSize="54px" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60px"
                    android:drawableLeft="@drawable/home_ico_dingwei"
                    android:gravity="center"
                    android:textColor="@color/_666666"
                    android:textSize="39px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="54px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_wet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42px"
                    android:drawableLeft="@drawable/home_hjshj_ico_wendu"
                    android:gravity="center"
                    android:text="@string/at_wet"
                    android:textColor="@color/_333333"
                    android:textSize="39px" />

                <TextView
                    android:id="@+id/tv_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_hjshj_ico_pm"
                    android:gravity="center"
                    android:text="@string/at_pm"
                    android:layout_marginLeft="48px"
                    android:textColor="@color/_333333"
                    android:textSize="39px" />

                <TextView
                    android:id="@+id/tv_noise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_hjshj_ico_zaosheng"
                    android:layout_marginLeft="48px"
                    android:gravity="center"
                    android:text="@string/at_noise_"
                    android:textColor="@color/_333333"
                    android:textSize="39px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="42px"
                    android:drawableLeft="@drawable/home_hjshj_ico_kongqizhiliang"
                    android:layout_marginRight="15px"
                    android:gravity="center"
                    android:text="@string/at_air_quality_"
                    android:textColor="@color/_333333"
                    android:textSize="39px" />

                <TextView
                    android:id="@+id/tv_air_quality"
                    android:layout_width="85px"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_333333"
                    android:textSize="39px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_hjshj_ico_fengli"
                    android:gravity="center"
                    android:text="@string/at_wind"
                    android:layout_marginLeft="15px"
                    android:textColor="@color/_333333"
                    android:textSize="39px" />

                <TextView
                    android:id="@+id/tv_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/_333333"
                    android:textSize="39px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="66px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45px"
                    android:text="@string/at_tips_"
                    android:textColor="@color/_E85D3E"
                    android:textSize="39px" />

                <TextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24px"
                    android:textColor="@color/_E85D3E"
                    android:textSize="36px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:layout_marginTop="60px"
                android:background="@color/_EEEEEE" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75px"
            android:paddingLeft="45px"
            android:paddingRight="45px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/at_line_chart"
                android:textColor="@color/_333333"
                android:textSize="54px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/at_selector_45px_3pxeeeeee_ffffff_eeeeee"
                android:drawableRight="@drawable/bt_s_yxjs_xiala"
                android:gravity="center"
                android:paddingLeft="21px"
                android:text="@string/at_24hour"
                android:textColor="@color/_333333"
                android:textSize="36px" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.aliyun.ayland.widget.ATIndexHorizontalScrollView
                android:id="@+id/indexHorizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33px"
                android:fadeScrollbars="false">

                <com.aliyun.ayland.widget.ATToday24HourView
                    android:id="@+id/today24HourView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </com.aliyun.ayland.widget.ATIndexHorizontalScrollView>

            <TextView
                android:id="@+id/tv_no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/at_no_data"
                android:textColor="@color/_999999"
                android:textSize="38px"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</com.aliyun.ayland.widget.ATObservableScrollView>