<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bartext="@string/at_appoint_result" />

    <com.aliyun.ayland.widget.ATObservableScrollView
        android:id="@+id/observableScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_off_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_below="@id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="访客可使用二维码开门（过期无效）"
                    android:textColor="@color/_333333"
                    android:textSize="36px" />

                <ImageView
                    android:id="@+id/img_off_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="165px"
                    android:src="@drawable/hsh_pic_tpjzsb"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_off_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="540px"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="60px"
                    android:text="@string/at_device_off_line_click_to_try_again"
                    android:textColor="@color/_999999"
                    android:textSize="38px"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:layout_marginTop="24px"
                android:background="@drawable/at_shape_18px_f2f7fa"
                android:orientation="vertical"
                android:paddingTop="60px"
                android:paddingBottom="60px"
                android:paddingRight="45px"
                android:paddingLeft="45px">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/_333333"
                    android:textSize="72px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="230px"
                        android:layout_height="wrap_content"
                        android:text="@string/at_phone3_"
                        android:textColor="@color/_666666"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/_666666"
                        android:textSize="45px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_visit_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="230px"
                        android:layout_height="wrap_content"
                        android:text="@string/at_visit_address_1"
                        android:textColor="@color/_666666"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/tv_visit_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/_666666"
                        android:textSize="45px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_visit_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="230px"
                        android:layout_height="wrap_content"
                        android:text="@string/at_visit_time_1"
                        android:textColor="@color/_666666"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/tv_visit_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/_666666"
                        android:textSize="45px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_leave_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="230px"
                        android:layout_height="wrap_content"
                        android:text="@string/at_leave_time_1"
                        android:textColor="@color/_666666"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/tv_leave_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/_666666"
                        android:textSize="45px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_plate_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="230px"
                        android:layout_height="wrap_content"
                        android:text="@string/at_plate_number_1"
                        android:textColor="@color/_666666"
                        android:textSize="45px" />

                    <TextView
                        android:id="@+id/tv_plate_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/_666666"
                        android:textSize="45px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.aliyun.ayland.widget.ATObservableScrollView>
</LinearLayout>