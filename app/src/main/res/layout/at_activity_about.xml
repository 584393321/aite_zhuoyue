<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_F5F5F5"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bartext="@string/at_setting" />

    <ImageView
        android:layout_width="246px"
        android:layout_height="246px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="95px"
        android:src="@drawable/personal_logo" />

    <TextView
        android:id="@+id/tv_verson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27px"
        android:textColor="@color/_808080"
        android:textSize="42px" />

    <RelativeLayout
        android:id="@+id/rl_version"
        android:layout_width="match_parent"
        android:layout_height="169px"
        android:layout_marginTop="74px"
        android:background="@drawable/at_selector_ffffff_e0e0e0"
        android:paddingLeft="42px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/at_verson_declare"
            android:textColor="@color/_333333"
            android:textSize="45px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:src="@drawable/btn_jump_h" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/_EEEEEE" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_evaluate"
        android:layout_width="match_parent"
        android:layout_height="169px"
        android:background="@drawable/at_selector_ffffff_e0e0e0"
        android:paddingLeft="42px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/at_grade"
            android:textColor="@color/_333333"
            android:textSize="45px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:src="@drawable/btn_jump_h" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/_EEEEEE" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_service_agreement"
        android:layout_width="match_parent"
        android:layout_height="169px"
        android:background="@drawable/at_selector_ffffff_e0e0e0"
        android:paddingLeft="42px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/at_service_agreement"
            android:textColor="@color/_505050"
            android:textSize="42px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:src="@drawable/btn_jump_h" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/_EEEEEE" />
    </RelativeLayout>
</LinearLayout>
