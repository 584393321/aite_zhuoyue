<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_F5F5F5"
        android:orientation="vertical">

        <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
            android:id="@+id/title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bartext="@string/at_user_center" />

        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="match_parent"
            android:layout_height="210px"
            android:layout_marginTop="20px"
            android:background="@drawable/at_selector_ffffff_e0e0e0"
            android:paddingLeft="42px"
            android:paddingRight="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/at_profile"
                android:textColor="@color/_333333"
                android:textSize="45px" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_jump_h" />

            <com.aliyun.ayland.widget.ATMyCircleImageView
                android:id="@+id/img_userprofile"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_centerVertical="true"
                android:layout_marginRight="12px"
                android:src="@drawable/ico_touxiang_mr"
                android:layout_toLeftOf="@id/img"/>
        </RelativeLayout>

        <View
            android:layout_width="42px"
            android:background="@color/white"
            android:layout_height="1px"/>

        <RelativeLayout
            android:id="@+id/rl_nick"
            android:layout_width="match_parent"
            android:layout_height="168px"
            android:background="@drawable/at_selector_ffffff_e0e0e0"
            android:paddingLeft="42px"
            android:paddingRight="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/at_nick"
                android:textColor="@color/_333333"
                android:textSize="45px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_jump_h" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="101px"
                android:layout_alignParentRight="true"
                android:textColor="@color/_999999"
                android:textSize="42px"/>
        </RelativeLayout>

        <View
            android:layout_width="42px"
            android:background="@color/white"
            android:layout_height="1px"/>

        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="match_parent"
            android:layout_height="168px"
            android:background="@drawable/at_selector_ffffff_e0e0e0"
            android:paddingLeft="42px"
            android:paddingRight="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/at_phone2"
                android:textColor="@color/_333333"
                android:textSize="45px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_jump_h" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="101px"
                android:layout_alignParentRight="true"
                android:textColor="@color/_999999"
                android:textSize="42px"/>
        </RelativeLayout>

        <View
            android:layout_width="42px"
            android:background="@color/white"
            android:layout_height="1px"/>

        <RelativeLayout
            android:id="@+id/rl_email"
            android:layout_width="match_parent"
            android:layout_height="168px"
            android:background="@drawable/at_selector_ffffff_e0e0e0"
            android:paddingLeft="42px"
            android:paddingRight="40px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/at_email"
                android:textColor="@color/_333333"
                android:textSize="45px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_jump_h" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="101px"
                android:layout_alignParentRight="true"
                android:textColor="@color/_999999"
                android:textSize="42px"/>
        </RelativeLayout>
    </LinearLayout>