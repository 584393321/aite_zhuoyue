<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42px"
        android:layout_marginTop="114px"
        android:text="@string/at_enter_accept_phone"
        android:textColor="@color/_333333"
        android:textSize="72px" />

    <LinearLayout
        android:layout_width="996px"
        android:layout_height="168px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="99px"
        android:background="@drawable/at_selector_15px_3pxdddddd_f7f7f7"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:text="@string/at_86"
            android:textColor="@color/_333333"
            android:textSize="54px" />

        <View
            android:layout_width="3px"
            android:layout_height="96px"
            android:layout_marginLeft="46px"
            android:background="@color/_EEEEEE" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/at_enter_accept_phone"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="42px"
            android:textColor="@color/_333333"
            android:textColorHint="@color/_CCCCCC"
            android:textSize="45px" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="960px"
        android:layout_height="132px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180px"
        android:background="@drawable/at_shape_66px_1478c8"
        android:gravity="center"
        android:text="@string/at_submit"
        android:textColor="@color/white"
        android:textSize="48px" />
</LinearLayout>