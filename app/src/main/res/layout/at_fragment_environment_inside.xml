<?xml version="1.0" encoding="utf-8"?>
<com.aliyun.ayland.widget.ATObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45px"
                    android:textColor="@color/_1478C8"
                    android:textSize="120px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="ug/m3"
                    android:textColor="@color/_1478C8"
                    android:textSize="60px" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45px"
                android:layout_marginTop="3px"
                android:text="@string/at_pm25"
                android:textColor="@color/_333333"
                android:textSize="54px"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45px"
                    android:drawableLeft="@drawable/home_hjshj_ico_wendu"
                    android:gravity="center"
                    android:text="@string/at_temp_1"
                    android:textColor="@color/_333333"
                    android:textSize="39px" />

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="160px"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18px"
                    android:textColor="@color/_333333"
                    android:textSize="39px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/home_hjshj_ico_shidu"
                    android:gravity="center"
                    android:text="@string/at_wet"
                    android:textColor="@color/_333333"
                    android:textSize="39px" />

                <TextView
                    android:id="@+id/tv_wet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18px"
                    android:textColor="@color/_333333"
                    android:textSize="39px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginLeft="45px"
                android:layout_marginRight="45px"
                android:layout_marginTop="63px"
                android:background="@color/_EEEEEE" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="84px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="186px"
                android:layout_height="wrap_content"
                android:paddingLeft="45px"
                android:text="@string/at_formaldehyde"
                android:textColor="@color/_333333"
                android:textSize="38px"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_hcho"
                android:layout_width="wrap_content"
                android:layout_height="9px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/at_shape_5px_1478c8" />

            <TextView
                android:id="@+id/tv_hcho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="21px"
                android:textColor="@color/_999999"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="186px"
                android:layout_height="wrap_content"
                android:paddingLeft="45px"
                android:text="@string/at_co2"
                android:textColor="@color/_333333"
                android:textSize="39px"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_co2"
                android:layout_width="wrap_content"
                android:layout_height="9px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/at_shape_5px_1478c8" />

            <TextView
                android:id="@+id/tv_co2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="21px"
                android:textColor="@color/_999999"
                android:textSize="36px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="186px"
                android:layout_height="wrap_content"
                android:paddingLeft="45px"
                android:text="@string/at_tvoc"
                android:textColor="@color/_333333"
                android:textSize="39px"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_tvoc"
                android:layout_width="wrap_content"
                android:layout_height="9px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/at_shape_5px_1478c8" />

            <TextView
                android:id="@+id/tv_tvoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="21px"
                android:textColor="@color/_999999"
                android:textSize="36px" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75px"
            android:paddingLeft="45px"
            android:paddingRight="45px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/at_line_chart"
                android:textColor="@color/_333333"
                android:textSize="54px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/at_selector_45px_3pxeeeeee_ffffff_eeeeee"
                android:drawableRight="@drawable/bt_s_yxjs_xiala"
                android:gravity="center"
                android:paddingLeft="21px"
                android:text="@string/at_24hour"
                android:textColor="@color/_333333"
                android:textSize="36px" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.aliyun.ayland.widget.ATIndexHorizontalScrollView
                android:id="@+id/indexHorizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33px"
                android:fadeScrollbars="false">

                <com.aliyun.ayland.widget.ATToday24HourView
                    android:id="@+id/today24HourView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </com.aliyun.ayland.widget.ATIndexHorizontalScrollView>

            <TextView
                android:id="@+id/tv_no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/at_no_data"
                android:textColor="@color/_999999"
                android:textSize="38px"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</com.aliyun.ayland.widget.ATObservableScrollView>