<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="996px"
    android:layout_height="250px"
    android:layout_marginTop="30px"
    android:layout_marginLeft="42px"
    android:orientation="vertical"
    android:background="@drawable/at_selector_12px_ffffff_e6e6e6">

    <ImageView
        android:id="@+id/img"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_marginLeft="42px"
        android:layout_centerVertical="true"
        android:src="@drawable/at_icon_s_jiatingjiankong1" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="67px"
        android:layout_marginTop="60px"
        android:layout_marginLeft="174px"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/_333333"
        android:textSize="48px" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_marginTop="139px"
        android:layout_marginLeft="174px"
        android:textColor="@color/_BBBBBB"
        android:textSize="36px"/>
</RelativeLayout>