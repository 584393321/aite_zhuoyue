<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
            android:id="@+id/titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bartext="@string/at_change_profile" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/_F5F5F5" />

        <com.aliyun.ayland.widget.ATMyCircleImageView
            android:id="@+id/img_userprofile"
            android:layout_width="600px"
            android:layout_height="600px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:text="@string/at_click_profile"
            android:textColor="@color/_808080"
            android:textSize="42px" />

    </LinearLayout>