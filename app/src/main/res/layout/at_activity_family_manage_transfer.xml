<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15px"
        android:layout_marginLeft="45px"
        android:layout_marginTop="30px"
        android:text="@string/at_transfer_family_manage"
        android:textColor="@color/_333333"
        android:textSize="60px"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="45px">

        <Button
            android:id="@+id/btn_subscribe"
            android:layout_width="match_parent"
            android:layout_height="135px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:layout_marginTop="45px"
            android:background="@drawable/at_selector_150px_1478c8_005395"
            android:gravity="center"
            android:text="@string/at_sure1"
            android:textColor="@color/white"
            android:textSize="45px" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_subscribe"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
</LinearLayout>