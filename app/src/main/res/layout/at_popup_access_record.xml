<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <RelativeLayout
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="837px"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="45px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:text="@string/at_form_"
                android:textColor="@color/_999999"
                android:textSize="39px" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45px"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_in_out"
                    android:layout_width="225px"
                    android:layout_height="90px"
                    android:background="@drawable/at_selector_18px_f3f3f3_e0f1ff"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/at_in_out"
                    android:textColor="@color/_333333"
                    android:textSize="42px" />

                <RadioButton
                    android:id="@+id/rb_in"
                    android:layout_width="225px"
                    android:layout_height="90px"
                    android:layout_marginLeft="114px"
                    android:background="@drawable/at_selector_18px_f3f3f3_e0f1ff"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/at_in"
                    android:textColor="@color/_333333"
                    android:textSize="42px" />

                <RadioButton
                    android:layout_width="225px"
                    android:layout_height="90px"
                    android:layout_marginLeft="114px"
                    android:background="@drawable/at_selector_18px_f3f3f3_e0f1ff"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/at_out"
                    android:textColor="@color/_333333"
                    android:textSize="42px" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="54px"
                android:background="@color/_EEEEEE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="51px"
                android:text="@string/at_time_1"
                android:textColor="@color/_999999"
                android:textSize="39px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginTop="48px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="450px"
                    android:layout_height="match_parent"
                    android:background="@drawable/at_shape_45px_f3f3f3"
                    android:gravity="center"
                    android:text="@string/at_please_choose"
                    android:textColor="@color/_BBBBBB"
                    android:textSize="42px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="39px"
                    android:text="@string/at_to"
                    android:textColor="@color/_999999"
                    android:textSize="42px" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="450px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="39px"
                    android:background="@drawable/at_shape_45px_f3f3f3"
                    android:gravity="center"
                    android:text="@string/at_please_choose"
                    android:textColor="@color/_BBBBBB"
                    android:textSize="42px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="63px"
                android:background="@color/_EEEEEE" />

            <Button
                android:id="@+id/button"
                android:layout_width="207px"
                android:layout_height="90px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48px"
                android:background="@drawable/at_selector_66px_1478c8_005395"
                android:gravity="center"
                android:text="@string/at_sure"
                android:textColor="@color/white"
                android:textSize="51px" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>