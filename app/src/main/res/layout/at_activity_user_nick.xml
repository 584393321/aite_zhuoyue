<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_F5F5F5"
        android:orientation="vertical">

        <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
            android:id="@+id/titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bartext="@string/at_set_nick" />

        <com.aliyun.ayland.widget.ATClearEditText
            android:id="@+id/et_nick"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_marginTop="20px"
            android:background="@color/white"
            android:textColorHint="@color/_999999"
            android:hint="@string/at_input_nick"
            android:maxLength="15"
            android:paddingLeft="42px"
            android:paddingRight="30px"
            android:textColor="@color/_333333"
            android:textSize="42px" />
    </LinearLayout>