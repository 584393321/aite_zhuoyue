<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/_666666"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="816px"
        android:layout_height="426px"
        android:layout_centerInParent="true"
        android:background="@drawable/at_shape_30px_f5f5f5">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66px"
            android:textColor="@color/_333333"
            android:textSize="48px" />

        <EditText
            android:id="@+id/edittext"
            android:layout_width="717px"
            android:layout_height="78px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="183px"
            android:background="@drawable/at_shape_3pxdddddd_ffffff"
            android:gravity="start|center_vertical"
            android:maxLength="10"
            android:paddingLeft="36px"
            android:textColor="@color/_666666"
            android:textColorHint="@color/_999999"
            android:textSize="42px" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="132px"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/at_cancel"
                android:textColor="@color/_666666"
                android:textSize="48px" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/at_sure1"
                android:textColor="@color/_1478C8"
                android:textSize="48px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_above="@id/linearLayout"
            android:background="@color/_EEEEEE" />

        <View
            android:layout_width="3px"
            android:layout_height="132px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/_EEEEEE" />
    </RelativeLayout>
</RelativeLayout>