<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="240px"
    android:layout_marginBottom="30px"
    android:background="@drawable/at_shape_3pxeeeeee_fdfdfd"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150px"
        android:layout_height="150px"
        android:src="@drawable/ico_touxiang_mr"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45px"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="279px"
        android:ellipsize="end"
        android:maxWidth="400px"
        android:textColor="@color/_333333"
        android:textSize="48px" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="45px"
        android:drawablePadding="6px"
        android:drawableRight="@drawable/jump"
        android:gravity="center"
        android:textColor="@color/_999999"
        android:textSize="42px" />
</RelativeLayout>