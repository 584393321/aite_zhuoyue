<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="996px"
    android:layout_height="240px"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="42px" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="71px"
        android:layout_marginLeft="174px"
        android:layout_marginTop="56px"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="600px"
        android:textColor="@color/_333333"
        android:textSize="51px" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_marginLeft="174px"
        android:layout_marginTop="140px"
        android:textColor="@color/_999999"
        android:textSize="36px" />

    <LinearLayout
        android:id="@+id/ll_switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="48px">

        <com.aliyun.ayland.widget.ATSwitchButton
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:kswBackColor="@color/at_ksw_md_back_color"
            app:kswThumbDrawable="@drawable/ksw_md_thumb"
            app:kswThumbHeight="@dimen/ksw_md_thumb_ripple_size"
            app:kswThumbMarginBottom="-14dp"
            app:kswThumbMarginLeft="-16dp"
            app:kswThumbMarginRight="-16dp"
            app:kswThumbMarginTop="-14dp"
            app:kswThumbRangeRatio="1.45"
            app:kswThumbWidth="@dimen/ksw_md_thumb_ripple_size" />
    </LinearLayout>

    <View
        android:layout_width="954px"
        android:layout_height="1px"
        android:layout_marginLeft="42px"
        android:background="@color/_EEEEEE" />
</RelativeLayout>