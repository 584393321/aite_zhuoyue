<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.aliyun.ayland.widget.titlebar.ATMyTitleBar
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:bartext="@string/at_regist_family_member" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginTop="27px"
        android:text="@string/at_please_input_family_member_id"
        android:textColor="@color/_333333"
        android:textSize="72px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"
        android:layout_marginTop="42px"
        android:lineSpacingExtra="10px"
        android:text="@string/at_please_input_family_member_id1"
        android:textColor="@color/_999999"
        android:textSize="42px" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="168px"
        android:layout_marginLeft="42px"
        android:layout_marginRight="42px"
        android:layout_marginTop="72px"
        android:background="@drawable/at_shape_15px_3pxdddddd_f7f7f7"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:maxLength="18"
        android:paddingLeft="45px"
        android:textColor="@color/_333333"
        android:textColorHint="@color/_DDDDDD"
        android:textSize="54px" />

    <Button
        android:id="@+id/button"
        android:layout_width="960px"
        android:layout_height="132px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150px"
        android:background="@drawable/at_selector_66px_1478c8_005395"
        android:gravity="center"
        android:text="@string/at_next"
        android:textColor="@color/white"
        android:textSize="48px" />
</LinearLayout>