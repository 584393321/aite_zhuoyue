<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_content"
    android:layout_width="300px"
    android:layout_height="300px"
    android:layout_marginLeft="40px"
    android:background="@drawable/at_selector_f5f5f5_eeeeee"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/home_bg_jbwlkk_s"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="96px"
        android:layout_height="96px"
        android:layout_marginLeft="42px"
        android:layout_marginTop="42px"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42px"
        android:layout_marginRight="30px"
        android:layout_marginTop="170px"
        android:maxWidth="228px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/_333333"
        android:textSize="42px" />

    <ImageView
        android:id="@+id/img_ani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-300px"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/szwj_ld_shoudongkaiguan_small"
        android:visibility="invisible" />
</RelativeLayout>