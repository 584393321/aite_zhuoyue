<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="674px"
            android:layout_alignParentBottom="true"
            android:background="@color/_EAEAEA">

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="144px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:scaleType="center"
                android:src="@drawable/online_info_triangle_c" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_below="@id/img_arrow"
                android:background="@color/_D8D8D8"
                android:layout_height="2px"/>

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/flowlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11px"
                android:layout_below="@id/view"
                zhy:max_select="1"
                >
            </com.zhy.view.flowlayout.TagFlowLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>