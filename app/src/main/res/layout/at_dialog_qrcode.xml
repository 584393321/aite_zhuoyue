<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="54px"
        android:src="@drawable/hsh_btn_guanbitanchuan" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="976px"
        android:layout_height="1110px"
        android:layout_below="@id/img_close"
        android:background="@drawable/at_shape_15px_ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105px"
            android:layout_marginTop="48px"
            android:textColor="@color/_333333"
            android:text="@string/at_pass_qrcode"
            android:textSize="66px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="765px"
            android:layout_height="765px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45px" />

        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="51px"
            android:gravity="center"
            android:drawablePadding="9px"
            android:drawableLeft="@drawable/zhihui_ico_refresh"
            android:textColor="@color/_1478C8"
            android:text="@string/at_auto_refresh"
            android:textSize="45px" />
    </LinearLayout>
</RelativeLayout>